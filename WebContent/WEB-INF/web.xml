<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="ComPARES" version="2.5">
	<display-name>COMPARES</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>CharsetFilter</filter-name>
		<filter-class>es.um.fcd.web.controller.CharsetFilter</filter-class>
		<init-param>
			<param-name>requestEncoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<servlet>
		<description></description>
		<display-name>Test Uploader</display-name>
		<servlet-name>TestUploader</servlet-name>
		<servlet-class>es.um.fcd.web.servlet.TestUploader</servlet-class>
		<init-param>
			<description>Uploads test data and files attached</description>
			<param-name>filesDir</param-name>
			<param-value>WEB-INF/files</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>TestUploader</servlet-name>
		<url-pattern>/create-test</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>Create Source</display-name>
		<servlet-name>CreateSource</servlet-name>
		<servlet-class>es.um.fcd.web.servlet.CreateSource</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateSource</servlet-name>
		<url-pattern>/CreateSource</url-pattern>
		<url-pattern>/create-source</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>Create Input</display-name>
		<servlet-name>CreateInput</servlet-name>
		<servlet-class>es.um.fcd.web.servlet.CreateInput</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CreateInput</servlet-name>
		<url-pattern>/CreateInput</url-pattern>
		<url-pattern>/create-input</url-pattern>
	</servlet-mapping>
	<jsp-config>
		<taglib>
			<taglib-uri>/utiltld</taglib-uri>
			<taglib-location>/WEB-INF/tld/utiltld.tld</taglib-location>
		</taglib>
		<jsp-property-group>
			<description>JSP Fragment</description>
			<display-name>JSPF</display-name>
			<url-pattern>*.jspf</url-pattern>
			<el-ignored>false</el-ignored>
			<page-encoding>UTF-8</page-encoding>
			<scripting-invalid>false</scripting-invalid>
			<include-prelude>/WEB-INF/views/html/include.jsp</include-prelude>
		</jsp-property-group>

		<jsp-property-group>
			<description>Configuracion JSP</description>
			<display-name>Configuracion JSP</display-name>
			<url-pattern>*.jsp</url-pattern>
			<el-ignored>false</el-ignored>
			<page-encoding>UTF-8</page-encoding>
			<scripting-invalid>false</scripting-invalid>
			<include-prelude>/WEB-INF/views/html/include.jsp</include-prelude>
			<include-prelude>/WEB-INF/views/html/prelude.jsp</include-prelude>
			<include-coda>/WEB-INF/views/html/coda.jsp</include-coda>
		</jsp-property-group>
	</jsp-config>
	<servlet>
		<description></description>
		<display-name>FrontController</display-name>
		<servlet-name>FrontController</servlet-name>
		<servlet-class>es.um.fcd.web.controller.FrontController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FrontController</servlet-name>
		<url-pattern>*.ctrl</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>ActualizarNotificaciones</display-name>
		<servlet-name>ActualizarNotificaciones</servlet-name>
		<servlet-class>es.um.tfg.atfc.web.servlet.ActualizarNotificaciones</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ActualizarNotificaciones</servlet-name>
		<url-pattern>/ActualizarNotificaciones</url-pattern>
		<url-pattern>/actualizarnotificaciones</url-pattern>
	</servlet-mapping>
</web-app>